@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    [Parameter]  private int amount {get; set;}

    void IncrementCount()
    {
        currentCount+= amount;
    }
}
